{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "feature-x/*": ["../../packages/feature-x/src/*"],
      "feature-y/*": ["../../packages/feature-y/src/*"],
      "ui-components/*": ["../../packages/ui-components/src/*"],
      "utils/*": ["../../packages/utils/src/*"]
    }
  },
  "include": ["src"]
}
